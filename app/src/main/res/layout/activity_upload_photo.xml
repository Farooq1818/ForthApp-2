<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Upload_Photo">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="500sp"
        android:layout_height="900sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/full_back" />

    <Button
        android:id="@+id/upload_inner_photo_btn"
        android:layout_width="wrap_content"
        android:layout_height="52sp"
        android:backgroundTint="#3C7962"
        android:fontFamily="@font/poppins"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Upload Photo"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.834" />

    <ImageView
        android:id="@+id/upload_inner_photo"
        android:layout_width="326dp"
        android:layout_height="370dp"
        app:layout_constraintBottom_toTopOf="@+id/upload_inner_photo_btn"
        app:layout_constraintEnd_toEndOf="@+id/upload_inner_photo_btn"
        app:layout_constraintStart_toStartOf="@+id/upload_inner_photo_btn"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>